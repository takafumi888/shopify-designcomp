{{ 'c_parallax.css' | asset_url | stylesheet_tag }}


  <div class="c_parallax-parallax-overlay">
    <div class="c_parallax__image c_parallax-overlay__image">
      <source srcset="{{ section.settings.image_overlay_sp | image_url: width: 800 }}" media="(max-width: 750px)">
      <picture>
        <img class="c_image" src="{{ section.settings.image_overlay | image_url: width: 3840 }}" width="1920" height="800" alt="{{ section.settings.image.alt }}">
      </picture>
    </div>
  </div>

  {%- if condition -%}
    
  {%- endif -%}
<div class="c_parallax-section">
  <div class="c_parallax__wrapper">
    <div class="c_parallax__image">
      <source srcset="{{ section.settings.image_sp | image_url: width: 800 }}" media="(max-width: 750px)">
      <picture>
        <img class="c_image" src="{{ section.settings.image | image_url: width: 3840 }}" width="1920" height="800" alt="{{ section.settings.image.alt }}">
      </picture>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "カスタム:パララックス",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "画像(PC)"
    },
    {
      "type": "image_picker",
      "id": "image_sp",
      "label": "画像(SP)"
    },
    {
      "type": "image_picker",
      "id": "image_overlay",
      "label": "オーバレイ(PC)"
    },
    {
      "type": "image_picker",
      "id": "image_overlay_sp",
      "label": "オーバレイ(SP)"
    },
    {
      "type": "image_picker",
      "id": "image_decoration",
      "label": "装飾"
    },
    {
      "type": "textarea",
      "id": "textarea",
      "label": "テキスト",
      "default": "テキストエリア"
    }
  ],
  "presets": [
    {
      "name": "カスタム:パララックス",
    }
  ]
}
{% endschema %}
