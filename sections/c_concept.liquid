{{ 'c_concept.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_sp }}px ;
    padding-bottom: {{ section.settings.padding_bottom_sp }}px ;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}">
  <div class="c_concept page-width">
    <div class="c_section-head c_concept__head">
      {% render 'c_section-title', title: section.settings.title, title_sub: section.settings.title_sub, vertical: true %}
    </div>
    <div class="c_concept__content">
      {%- if section.settings.textarea-1 != blank -%}
        <p class="c_concept__content-item c_concept__content-item--heading">{{ section.settings.textarea-1 | newline_to_br }}</p>
      {%- endif -%}
      {%- if section.settings.textarea-1 != blank -%}
        <p class="c_concept__content-item c_concept__content-item--catchphrase">{{ section.settings.textarea-2 | newline_to_br }}</p>
      {%- endif -%}
      {%- if section.settings.textarea-1 != blank -%}
        <p class="c_concept__content-item c_concept__content-item--description">{{ section.settings.textarea-3 | newline_to_br }}</p>
      {%- endif -%}
  
      {%- if section.settings.image != blank -%}
        <div class="c_concept__image">

          <img src="{{ section.settings.image | image_url: width: 630 }} alt="{{ section.settings.image.alt }} width="210" height="210">

        </div>
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "カスタム: コンセプト",
  "settings": [
    {
      "type": "text",
      "id": "title_sub",
      "label": "サブ見出し",
      "default": "サブ見出し"
    },
    {
      "type": "text",
      "id": "title",
      "label": "見出し",
      "default": "見出し"
    },
    {
      "type": "textarea",
      "id": "textarea-1",
      "label": "テキスト",
      "default": "テキストテキスト"
    },
    {
      "type": "textarea",
      "id": "textarea-2",
      "label": "テキスト",
      "default": "テキストテキスト"
    },
    {
      "type": "textarea",
      "id": "textarea-3",
      "label": "テキスト",
      "default": "テキストテキスト"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "画像"
    },
