  "blocks": [
    {
      "type": "newsletter",
      "name": "ニュースレター",
      "settings": [
        {
          "type": "text",
          "id": "newsletter_heading",
          "label": "ニュースレター",
          "default": "テキスト"
        },
        {
          "type": "text",
          "id": "btn_text",
